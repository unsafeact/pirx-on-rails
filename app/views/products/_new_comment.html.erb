<% if signed_in? %>
  <%= form_for([@product, @product.comments.build]) do |f| %>
    <form>
      <div class="form-group">
        <%= f.label "Add a review:", class: "control-label" %><br>
        <%= f.text_area :body , class: "form-control" , required: true%>
        <div class = "my-rating-wrapper" data-toggle="tooltip" title="Please, select a star!">
          <div class="rating"></div>
        </div>
      </div>
      <div class="row">
        <%= f.submit "Submit", class: "btn btn-light my-form-submit-button" , id: "myNewCommentBtn" %>
      </div>
    </form>
    <% end %>
<% end %>
